#!/bin/bash -eu

set -o pipefail

ELM_PLATFORM_VERSION="${ELM_PLATFORM_VERSION:-0.19.0}"
ELM_FORMAT_VERSION="${ELM_FORMAT_VERSION:-0.8.1}"
XELM_CACHE_HOME="${XDG_CACHE_HOME:-${HOME}/.cache}/xelm"
XELM_CACHE_BIN="${XELM_CACHE_HOME}/bin"

err_exit() {
  echo "E: $*" >&2
  exit 1
}

cmd="${1:-}"

if [ $# -gt 0 ]
then
  shift
else
  err_exit "missing command."
fi

case "$cmd" in
  _selfinstall)
    mkdir -p "${XELM_CACHE_HOME}" "${XELM_CACHE_BIN}"
    # install elm
    cd "$XELM_CACHE_HOME"
    wget -c -q "https://github.com/elm/compiler/releases/download/${ELM_PLATFORM_VERSION}/binaries-for-linux.tar.gz" -O "${XELM_CACHE_HOME}/elm-binary.tar.gz"
    tar -C "${XELM_CACHE_BIN}" -zxf "${XELM_CACHE_HOME}/elm-binary.tar.gz"

    # install elm format
    wget -c -q "https://github.com/avh4/elm-format/releases/download/${ELM_FORMAT_VERSION}/elm-format-${ELM_FORMAT_VERSION}-linux-x64.tgz" -O "${XELM_CACHE_HOME}/elm-format.tar.gz"
    tar -C "${XELM_CACHE_BIN}" -zxf "${XELM_CACHE_HOME}/elm-format.tar.gz"

    exit 0
    ;;

  format)
    test -d "${XELM_CACHE_HOME}" || err_exit "run _selfinstall first to download and install elm binaries"
    "${XELM_CACHE_BIN}/elm-${cmd}" "$@"
    exit $?
    ;;

  *)
    "${XELM_CACHE_BIN}/elm" "$@"
    exit $?
    ;;
esac
