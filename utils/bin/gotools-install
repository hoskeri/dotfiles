#!/bin/sh
set -eu
. /etc/environment

export GOPATH=$HOME/.gotools-install
export GO_BIN=$GOPATH/bin
export PATH="$GO_BIN:$PATH"

mkdir -p $GOPATH

echo 'export GOPATH=$(pwd)\n' > $GOPATH/.envrc

go get -u github.com/nsf/gocode
go get -u github.com/rogpeppe/godef
go get -u github.com/golang/lint/golint
go get -u github.com/lukehoban/go-outline
go get -u sourcegraph.com/sqs/goreturns
go get -u github.com/tpng/gopkgs
go get -u github.com/newhook/go-symbols
go get -u github.com/ddollar/forego
go get -u github.com/motemen/gore
go get -u github.com/github/hub
go get -u github.com/kardianos/govendor
go get -u github.com/omeid/go-livereload/cmd/livereload
go get -u github.com/kisielk/errcheck
go get -u github.com/jstemmer/gotags
go get -u github.com/klauspost/asmfmt
go get -u github.com/fatih/motion
go get -u github.com/zmb3/gogetdoc
go get -u github.com/josharian/impl

go get -u github.com/alecthomas/gometalinter
gometalinter --install >/dev/null

go get -u github.com/samuel/go-thrift/generator
mv -f $GO_BIN/generator $GO_BIN/gothrift-gen

strip $GO_BIN/*
